= render "quick_nav"

.talk
  .title
    = @talk.title
  .talk_meta
    Submitted by 
    = @talk.user.name
  .description
    = @talk.description
  
  .comments
    .comment_count
      %span{:id=>"count_number"}=@talk.comments.count
      comments
    - @talk.comments.each do |c|
      .comment
        .author_meta
          = c.user.name unless c.user.nil?
        .comment_text
          = c.description

  - if @current_user
    - form_for @comment, :remote=>true, :html=>{:'data-type'=>'html', :class=>'comment_form'} do |f|
      #comment_msg
      = @current_user.name
      says
      %br
      = f.text_area :description
      = f.hidden_field :talk_id
      %br
      = f.submit "Add comment", :class=>"submit_button"
